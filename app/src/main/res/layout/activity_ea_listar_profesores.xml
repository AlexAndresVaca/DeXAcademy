<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EA_ListarProfesores">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D2D50"
        android:fillViewport="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#1D2D50"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">


                <LinearLayout
                    android:layout_width="339dp"
                    android:layout_height="120dp"
                    android:background="#1D2D50"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >

                    <ImageView
                        android:id="@+id/imgEditarCliente"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/administrador" />

                    <TextView
                        android:id="@+id/textEditar"
                        android:layout_width="182dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_slab"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="ADMINISTRADOR"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginBottom="20dp"
                android:background="#1E5F74"
                android:orientation="vertical"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1D2D50"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:text="REGISTRO DE PROFESORES"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:translationZ="100dp">


                <LinearLayout
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_card_login2"
                    android:onClick="abrirPantallaAgregarProfesor"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imgAgregarProfesor"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/profesor" />

                    <TextView
                        android:id="@+id/txtAgregarProfesor"
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Agregar nuevo profesor"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/imgAgregarProfesor" />
                    />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="381dp"
                android:layout_margin="15dp"
                android:background="@drawable/bg_card_login"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="25dp"
                android:paddingRight="30dp"
                android:translationZ="100dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView49"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Buscar"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtBuscarProfesor"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="Ingrese el nombre del profesor"
                            android:inputType="textPersonName" />

                        <android.widget.Button
                            android:id="@+id/btn_BuscarProfesor"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:backgroundTint="#1E5F74"
                            android:drawableTop="@android:drawable/ic_menu_search"
                            android:onClick="buscarProfesor" />

                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_slab"
                    android:text="Lista de profesores"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <ListView
                    android:id="@+id/lstProfesores"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:layout_marginBottom="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="15dp"
                android:background="@drawable/bg_card_login2"
                android:onClick="cerrarSesion"
                android:orientation="vertical"
                android:translationZ="100dp">


                <LinearLayout
                    android:layout_width="215dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imgCerrarSesionAdmin"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/salir" />

                    <TextView
                        android:id="@+id/txtCerrarSesionAdmin"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Cerrar SesiÃ³n"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/imgCerrarSesionAdmin" />
                    />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>