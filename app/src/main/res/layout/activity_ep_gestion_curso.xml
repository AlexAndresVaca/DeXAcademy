<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EP_GestionCurso">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D2D50"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">



        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imgEditarCliente"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/profesor" />

            <TextView
                android:id="@+id/textEditar"
                android:layout_width="179dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center_horizontal|center_vertical"
                android:text="PROFESOR"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:orientation="vertical"
        android:background="#1E5F74"
            android:layout_marginBottom="20dp"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#1D2D50">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:text="GESTIÃ“N CURSOS"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1D2D50"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:translationZ="100dp">


            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_card_login2"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgCrearCurso"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/crear" />

                <TextView
                    android:id="@+id/txtiCrearCurso"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="abrirPantallaAgregarNuevoCurso"
                    android:text="Crear nuevo curso"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:layout_constraintTop_toBottomOf="@+id/imgCrearCurso" />
                />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/bg_card_login"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:paddingRight="30dp"
            android:translationZ="100dp">
            <TextView
                android:id="@+id/textView77"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:text="BUSCAR CURSOS"
                android:textColor="#1D2D50"
                android:textSize="24sp"
                android:textStyle="bold" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buscar"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtBuscarCursos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="13"
                        android:hint="Ingrese el nombre del curso"
                        android:inputType="textPersonName" />

                    <android.widget.Button
                        android:id="@+id/btnBuscarCurso"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#1E5F74"
                        android:drawableTop="@android:drawable/ic_menu_search" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todos los cursos"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <ListView
                android:id="@+id/lstBuscarCurso"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_marginBottom="20dp" />







            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnVolverVenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="volverMenuProfesor"
                    android:text="VOLVER"
                    app:backgroundTint="#FFA812"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>