<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EE_Gestinar_Estudiante_MisCursos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1D2D50"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="339dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgEditarCliente"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/estudiante" />

                    <TextView
                        android:id="@+id/textEditar"
                        android:layout_width="183dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_slab"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="ESTUDIANTE"
                        android:textColor="#FBF6F6"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginBottom="20dp"
                    android:background="#1E5F74"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1D2D50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_horizontal"
                        android:text="Mis Cursos"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:translationZ="100dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_card_login2"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imgCursoProceso"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            app:srcCompat="@drawable/proceso" />

                        <TextView

                            android:id="@+id/txtCursoProceso"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Cursos en proceso"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            app:layout_constraintTop_toBottomOf="@+id/imgCrearCurso" />
                        />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_card_login2"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imgCursoFinalizado"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            app:srcCompat="@drawable/terminada" />

                        <TextView
                            android:id="@+id/txtCursoFinalizado"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Cusos finalizados"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            app:layout_constraintTop_toBottomOf="@+id/imgCrearCurso" />
                        />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@drawable/bg_card_login"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingTop="25dp"
                    android:paddingRight="30dp"
                    android:translationZ="100dp">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView49"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Buscar"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/txtBuscarCursoEstudiante"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:ems="12"
                                android:hint="Ingrese el nombre del curso"
                                android:inputType="textPersonName" />

                            <android.widget.Button
                                android:id="@+id/btnBuscarCurso"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:backgroundTint="#1E5F74"
                                android:drawableTop="@android:drawable/ic_menu_search"
                                android:onClick="buscarCurso" />

                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Todos los cursos"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ListView
                        android:id="@+id/lstCursosEstudiante"
                        android:layout_width="match_parent"
                        android:layout_height="186dp"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_VolverMenuAlumno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="volver"
                            android:text="VOLVER"
                            android:textColor="#FFFFFF"
                            app:backgroundTint="#FFA812" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>