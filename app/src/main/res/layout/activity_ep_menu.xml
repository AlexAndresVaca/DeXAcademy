<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EP_Menu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D2D50"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imgEditarCliente"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/profesor" />

            <TextView
                android:id="@+id/textEditar"
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center_horizontal|center_vertical"
                android:text="PROFESOR"
                android:textColor="#FFFCFC"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:paddingRight="30dp"
            android:translationZ="100dp">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:text="MENÃš PRINCIPAL"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_card_login2"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgActualizarProfesor"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/actualizar" />

                <TextView
                    android:id="@+id/txtActualizarProfesor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="abrirPantallaActualizarProfesor"
                    android:text="Actualizar datos"
                    android:textColor="#FFFEFE"
                    android:textSize="26sp"
                    app:layout_constraintTop_toBottomOf="@+id/imgActualizarProfesor" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="220dp"
                android:background="@drawable/bg_card_login2"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgGestionCursoProfesor"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/libros" />

                <TextView
                    android:id="@+id/txtGestionCursoProfesor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="abrirPantallaGestionCurso"
                    android:text="Cursos"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    app:layout_constraintTop_toBottomOf="@+id/imgGestionCursoProfesor" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnVolverVenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VOLVER"
                    app:backgroundTint="#FFA812" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>