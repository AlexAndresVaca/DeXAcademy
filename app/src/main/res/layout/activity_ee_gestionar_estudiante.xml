<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EE_Gestionar_Estudiante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D2D50"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/estudiante" />

            <TextView
                android:id="@+id/textEditar"
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center_horizontal|center_vertical"
                android:text="ESTUDIANTE"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginBottom="20dp"
            android:background="#1E5F74"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:paddingRight="30dp"
            android:translationZ="100dp">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:text="MENÚ PRINCIPAL"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_card_login2"
                android:onClick="verPerfilEstudiante"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgVerPerfilEstudiante"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/actualizar" />

                <TextView
                    android:id="@+id/txtVerPerfilEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Perfil"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    app:layout_constraintTop_toBottomOf="@+id/VerPerfilEstudiante" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="120dp"
                android:background="@drawable/bg_card_login2"
                android:onClick="verCursosEstudiante"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgVerCursosEstudiante"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/libros" />

                <TextView
                    android:id="@+id/txtVerCursosEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Mis Cursos"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    app:layout_constraintTop_toBottomOf="@+id/VerCursosEstudiante" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/bg_card_login2"
                android:onClick="cerrarSesion"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:translationZ="100dp">


                <LinearLayout
                    android:layout_width="215dp"
                    android:layout_height="46dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iconCerrarSesion"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/salir" />

                    <TextView
                        android:id="@+id/txtCerrarSesionAlumno"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Cerrar Sesión"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/imgCrearCurso" />
                    />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>